---
import '../../base.css'
import BaseLayout from '../layouts/BaseLayout.astro'
import Card from '../components/Card'
import { getCollection } from 'astro:content'

const posts = await getCollection("blog");
---

<BaseLayout>
	<ul>
		{
		posts.map(({ data, slug }) => (
			<Card href={`/${slug}/`} frontmatter={data} />
		))
		}
	</ul>
</BaseLayout>


